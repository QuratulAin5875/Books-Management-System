<h2>Edit Comment</h2>

<%= form_with(model: [@book, @comment], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :content, "Your Comment" %>
    <%= form.text_area :content, rows: 4, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Update Comment", class: "btn btn-primary" %>
  </div>
<% end %>
