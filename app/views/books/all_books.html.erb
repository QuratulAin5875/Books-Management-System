<h1 class="page-title">All Books</h1>

<table class="styled-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Published Date</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author_name %></td>
        <td><%= book.publisher %></td>
        <td><%= book.published_date %></td>
        <td><%= book.status %></td>
        <td>
          <div class="inline-actions">
            <%= link_to "Show", book_path(book, source: "all_books"), class: "btn btn-info btn-sm" %>
            <% if author_signed_in? && book.author_id == current_author.id %>
              <%= link_to "Edit", edit_book_path(book), class: "btn btn-warning btn-sm" %>
              <%= button_to "Delete", book_path(book),
                          method: :delete,
                          data: { confirm: "Are you sure you want to delete this book?" },
                          class: "btn btn-danger btn-sm inline-form" %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination">
  <% if @page > 1 %>
    <%= link_to "Previous", all_books_path(page: @page - 1) %>
  <% end %>

  <% if @page < @total_pages %>
    <%= link_to "Next", all_books_path(page: @page + 1) %>
  <% end %>
</div>

