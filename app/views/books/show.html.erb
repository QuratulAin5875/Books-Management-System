<div class="book-show-container">
  <!-- Book Header with colorful gradient -->
  <div class="book-header">
    <h1 class="book-title"><%= @book.title %></h1>
    <div class="book-meta-row">
      <div class="book-meta-item">
        <span class="meta-label">üë§ Author</span>
        <span class="meta-value"><%= @book.author_name %></span>
      </div>
      <div class="book-meta-item">
        <span class="meta-label">üè¢ Publisher</span>
        <span class="meta-value"><%= @book.publisher %></span>
      </div>
      <div class="book-meta-item">
        <span class="meta-label">üìÖ Published</span>
        <span class="meta-value"><%= @book.published_date %></span>
      </div>
      <div class="book-meta-item">
        <span class="meta-label">üìä Status</span>
        <span class="meta-value status-<%= @book.status.downcase %>"><%= @book.status %></span>
      </div>
    </div>
  </div>

  <!-- About Section with enhanced styling -->
  <div class="section-card about-section">
    <div class="section-header">
      <h2>üìñ About this Book</h2>
    </div>
    <div class="about-content">
      <p><%= @book.about.presence || "No description added yet." %></p>
    </div>
  </div>

  <!-- Chapters Section with enhanced styling -->
  <div class="section-card chapters-section">
    <div class="section-header">
      <h2>üìö Chapters</h2>
      <% if author_signed_in? && @book.author == current_author %>
        <%= link_to "‚ûï Add Chapter", new_book_chapter_path(@book), class: "btn btn-primary add-chapter-btn" %>
      <% end %>
    </div>
    <% if @book.chapters&.any? %>
      <ol class="chapter-list">
        <% @book.chapters.each do |chapter| %>
          <li class="chapter-list-item">
            <%= link_to chapter.title, book_chapter_path(@book, chapter), class: "chapter-link" %>
            <% if @book.author == current_author %>
              <div class="inline-actions">
                <%= link_to "‚úèÔ∏è Edit", edit_book_chapter_path(@book, chapter), class: "btn btn-warning btn-sm" %>
                <%= button_to "üóëÔ∏è Delete", book_chapter_path(@book, chapter), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm inline-form" %>
              </div>
            <% end %>
          </li>
        <% end %>
      </ol>
    <% else %>
      <div class="no-chapters">
        <p>üìù No chapters yet. Start writing your story!</p>
      </div>
    <% end %>
  </div>

  <!-- Comments Section with enhanced styling -->
  <div class="section-card comments-section">
    <div class="section-header">
      <h2>üí¨ Comments</h2>
    </div>
    
    <% if @book.comments.any? %>
      <div class="comments-list">
        <% @book.comments.each do |comment| %>
          <div class="comment-box">
            <div class="comment-header">
              <span class="comment-author">üë§ <%= comment.author.email %></span>
            </div>
            <div class="comment-content">
              <%= comment.content %>
            </div>
            <% if comment.author == current_author %>
              <div class="comment-actions">
                <%= link_to "‚úèÔ∏è Edit", edit_book_comment_path(@book, comment), class: "btn btn-sm btn-warning" %>
                <%= button_to "üóëÔ∏è Delete", book_comment_path(@book, comment), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger inline-form" %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="no-comments">
        <p>üí≠ No comments yet. Be the first to share your thoughts!</p>
      </div>
    <% end %>
    
    <% if author_signed_in? %>
      <div class="add-comment-section">
        <h3>üí≠ Add a Comment</h3>
        <%= form_with(model: [@book, Comment.new], local: true) do |form| %>
          <div class="form-group">
            <%= form.text_area :content,
                  placeholder: "Write your comment here...",
                  rows: 3,
                  class: "form-control comment-input" %>
          </div>
          <div class="form-group">
            <%= form.submit "üì§ Post Comment", class: "btn btn-primary post-comment-btn" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="login-prompt">
        <p>üîê You must be logged in as an author to comment.</p>
      </div>
    <% end %>
  </div>

  <!-- Back Button -->
  <div class="back-section">
    <%= link_to "‚Üê Back", (request.referer || all_books_path), class: "btn btn-secondary back-btn" %>
  </div>
</div>

