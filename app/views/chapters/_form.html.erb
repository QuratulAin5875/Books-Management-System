<div class="chapter-form-card">
  <%= form_with(model: [@book, @chapter], local: true) do |form| %>
    <% if @chapter.errors.any? %>
      <div class="alert alert-danger">
        <p><%= pluralize(@chapter.errors.count, "error") %> prohibited this chapter from being saved:</p>
        <ul>
          <% @chapter.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-row">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control", placeholder: "e.g. Introduction" %>
      </div>
      <div class="form-group">
        <%= form.label :position %>
        <%= form.number_field :position, class: "form-control", min: 1, placeholder: "1" %>
      </div>
    </div>

    

    <div class="form-group">
      <%= form.label :body, "Content" %>
      <%= form.text_area :body, rows: 14, class: "form-control textarea-lg", placeholder: "Start writing your chapter..." %>
    </div>

    <div class="form-actions">
      <%= form.submit (@chapter.persisted? ? "Update Chapter" : "Create Chapter"), class: "btn btn-primary" %>
      <%= link_to "Cancel", book_path(@book), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>

<style>
  .chapter-form-card {
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 10px;
    padding: 18px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    border-top: 4px solid #2563eb;
  }
  .form-row {
    display: grid;
    grid-template-columns: minmax(300px, 660px) 160px;
    gap: 12px;
    margin-bottom: 12px;
    align-items: end;
  }
  .form-row .form-group:first-child .form-control { max-width: 660px; }
  .form-row .form-group:last-child .form-control { width: 160px; }
  
  .form-group label {
    display: block;
    font-weight: 600;
    margin-bottom: 8px;
  }
  .form-control {
    width: 100%;
    padding: 12px 14px;
    border: 1px solid #d1d5db;
    border-radius: 8px;
    font-size: 16px;
    line-height: 1.4;
    min-height: 44px;
    transition: border-color .15s ease, box-shadow .15s ease;
  }
  .form-control::placeholder {
    color: #9ca3af;
  }
  .form-control:focus {
    outline: none;
    border-color: #2563eb;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.18);
  }
  .textarea-lg {
    min-height: 320px;
    max-width: 860px;
    resize: vertical;
    line-height: 1.6;
  }
  @media (max-width: 640px) {
    .form-row {
      grid-template-columns: 1fr;
    }
    .form-row .form-group:first-child .form-control,
    .form-row .form-group:last-child .form-control,
    .textarea-lg { max-width: 100%; width: 100%; }
  }
  .form-actions {
    display: flex;
    gap: 8px;
    margin-top: 12px;
  }
  .chapter-form-card .btn-primary {
    background-color: #2563eb;
    border: 1px solid #2563eb;
    color: #fff;
    padding: 10px 14px;
    border-radius: 8px;
    font-size: 15px;
  }
  .chapter-form-card .btn-primary:hover {
    background-color: #1d4ed8;
    border-color: #1d4ed8;
  }
  .chapter-form-card .btn-secondary {
    border: 1px solid #d1d5db;
    padding: 10px 14px;
    border-radius: 8px;
    font-size: 15px;
  }
</style>
