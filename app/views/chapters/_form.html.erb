<div class="form-container">
  <%= form_with(model: [@book, @chapter], local: true) do |f| %>
    <div class="form-group">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-input" %>
    </div>
    <div class="form-group">
      <%= f.label :body, class: "form-label" %>
      <%= f.text_area :body, rows: 8, class: "form-input" %>
    </div>
    <div class="form-group">
      <%= f.label :position, class: "form-label" %>
      <%= f.number_field :position, class: "form-input" %>
    </div>
    <%= f.submit (@chapter.persisted? ? "Update Chapter" : "Create Chapter"), class: "btn btn-primary" %>
  <% end %>
</div>

