<div class="chapter-container">
  <!-- Book Link at Top -->
  <div class="book-link-section">
    <%= link_to book_path(@book), class: "book-link" do %>
      <span class="book-icon">üìö</span>
      <span class="book-title-text"><%= @book.title %></span>
      <span class="book-author-text">by <%= @book.author_name %></span>
    <% end %>
  </div>

  <!-- Chapter Header -->
  <div class="chapter-header">
    <h1 class="chapter-title"><%= @chapter.title %></h1>
    <div class="chapter-meta">
      <span class="chapter-number">Chapter <%= @chapter.id %></span>
      <span class="chapter-date"><%= @chapter.created_at.strftime("%B %d, %Y") %></span>
    </div>
  </div>

  <!-- Chapter Content -->
  <div class="chapter-content">
    <div class="book-chapter-body">
      <%= simple_format(@chapter.body) %>
    </div>
  </div>

  <!-- Chapter Navigation -->
  <div class="chapter-navigation">
    <div class="nav-buttons">
      <% if @chapter.has_previous? %>
        <%= link_to book_chapter_path(@book, @chapter.previous_chapter), class: "nav-btn prev-btn" do %>
          <span class="nav-icon">‚Üê</span>
          <span class="nav-text">
            <span class="nav-label">Previous</span>
            <span class="nav-title"><%= @chapter.previous_chapter.title %></span>
          </span>
        <% end %>
      <% else %>
        <div class="nav-btn prev-btn disabled">
          <span class="nav-icon">‚Üê</span>
          <span class="nav-text">
            <span class="nav-label">Previous</span>
            <span class="nav-title">No Previous Chapter</span>
          </span>
        </div>
      <% end %>

      <div class="nav-center">
        <%= link_to book_path(@book), class: "book-home-btn" do %>
          <span class="book-home-icon">üè†</span>
          <span>Book Home</span>
        <% end %>
      </div>

      <% if @chapter.has_next? %>
        <%= link_to book_chapter_path(@book, @chapter.next_chapter), class: "nav-btn next-btn" do %>
          <span class="nav-text">
            <span class="nav-label">Next</span>
            <span class="nav-title"><%= @chapter.next_chapter.title %></span>
          </span>
          <span class="nav-icon">‚Üí</span>
        <% end %>
      <% else %>
        <div class="nav-btn next-btn disabled">
          <span class="nav-text">
            <span class="nav-label">Next</span>
            <span class="nav-title">No Next Chapter</span>
          </span>
          <span class="nav-icon">‚Üí</span>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Author Actions -->
  <% if @book.author == current_author %>
    <div class="author-actions">
      <h3>Author Actions</h3>
      <div class="action-buttons">
        <%= link_to edit_book_chapter_path(@book, @chapter), class: "btn btn-warning action-btn" do %>
          <span class="action-icon">‚úèÔ∏è</span>
          Edit Chapter
        <% end %>
        <%= button_to book_chapter_path(@book, @chapter), method: :delete, data: { confirm: "Are you sure you want to delete this chapter?" }, class: "btn btn-danger action-btn" do %>
          <span class="action-icon">üóëÔ∏è</span>
          Delete Chapter
        <% end %>
      </div>
    </div>
  <% end %>
</div>

